// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String               @id @default(uuid())
  name         String
  phone_number String?              @unique
  discord_id   String?              @unique
  google_id    String?              @unique
  facebook_id  String?              @unique
  books        BookCopy[]
  cart         BooksWithCondition[]
}

model Book {
  id          String               @id @default(uuid())
  title       String
  author      String
  description String
  image       String
  books       BooksWithCondition[]
}

model BooksWithCondition {
  book_copies BookCopy[]
  book        Book       @relation(fields: [book_id], references: [id])
  book_id     String
  condition   Condition
  User        User?      @relation(fields: [userId], references: [id])
  userId      String?

  @@unique([book_id, condition])
}

model BookCopy {
  id                      String             @id @default(uuid())
  owner                   User               @relation(fields: [owner_id], references: [id])
  owner_id                String
  status                  String
  books_with_condition    BooksWithCondition @relation(fields: [books_with_condition_id, condition], references: [book_id, condition])
  books_with_condition_id String
  condition               Condition
}

enum Condition {
  NEW
  GOOD
  DAMAGED
  BAD
}
